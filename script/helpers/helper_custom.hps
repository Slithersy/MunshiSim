	// Change animation for Munshi
	//-------------------------------------------------------
	array<tString> vCurrentAnim = {""};
	void ChangeMunshiAnim(const tString &in asChangeToAnim, const tString &in Objects="")
	{
		vCurrentAnim[0] = SimFetchString(0);

		if (Entity_Exists(asChangeToAnim)) {
			if (Entity_Exists(vCurrentAnim[0])) Entity_SetActive(vCurrentAnim[0], false);
			Entity_SetActive(asChangeToAnim, true);
			vCurrentAnim[0] = asChangeToAnim;
			
			for (int i=1; i<vCurrentAnim.size(); i++) {
				if (i%2!=1) {
					//If Number is Odd
					if (Entity_Exists(vCurrentAnim[i])) Entity_SetActive(vCurrentAnim[i], true);
				} else {
					//If Number is Even
					if (Entity_Exists(vCurrentAnim[i])) Entity_SetActive(vCurrentAnim[i], false);
				}
			}
            
            SimStoreString(0, vCurrentAnim[0]);
        }

        if (Objects!="") {
            array<tString> vEachObject = cString_Split(Objects, ">");
            if (vEachObject.size()>1) {
                array<tString> vObjectsRemove = cString_Split(vEachObject[0], ",");
                if (vObjectsRemove.size()>1) {
                    for (int k=0; k<vObjectsRemove.size(); k++) {
                        if (Entity_Exists(vObjectsRemove[k])) Entity_SetActive(vObjectsRemove[k], false);
                    }
                } else if (Entity_Exists(vEachObject[0])) Entity_SetActive(vEachObject[0], false);
                
                array<tString> vObjectsAdd = cString_Split(vEachObject[1], ",");
                if (vObjectsAdd.size()>1) {
                    for (int k=0; k<vObjectsAdd.size(); k++) {
                        if (Entity_Exists(vObjectsAdd[k])) Entity_SetActive(vObjectsAdd[k], true);
                    }
                } else if (Entity_Exists(vEachObject[1])) Entity_SetActive(vEachObject[1], true);
            }
        }
	}
    
    
	// Make Munshi Walk
	//-------------------------------------------------------
    float lStartNum = 0;
    int lEndNum = 0;
    float fInterval = 0;
    void MunshiWalk(int alStartNum=1, int alEndNum=200, float afInterval = 2.0f)
    {
        lStartNum = alStartNum;
        lEndNum = alEndNum;
        fInterval = afInterval;
        bWalkLeft = true;
        lEndedWalkNum = 0;
        Map_RemoveTimer("MunshiWalkTimer");
        MunshiWalkTimer("MunshiWalkTimer");
        Map_AddTimer("MunshiWalkTimer", afInterval, "$MunshiWalkTimer");
    }
    
    bool bWalkLeft = true;
    int lEndedWalkNum = 0;
    void MunshiWalkTimer(const tString &in asTimer) {
        tString LeftRight = "Left";
        if (!bWalkLeft) LeftRight = "Right";
        int lUsedNum = int(cMath_Floor(lStartNum));
        tString EntName = "David_Walk"+LeftRight+"_"+lUsedNum;
        
        if (Entity_Exists(EntName) && !(((lUsedNum-1>=lEndNum) && bWalkLeft) ||
            ((lUsedNum-1>=lEndNum) && !bWalkLeft && !Entity_Exists("David_WalkRight_"+int(cMath_Floor(lUsedNum)))))) 
        {
            ChangeMunshiAnim(EntName);
            bWalkLeft = !bWalkLeft;
            Sound_CreateAtEntity("FootStepForest", "Player/footsteps/sneaker/forest/default_soft", EntName);
            
            Map_RestartCurrentTimer();
        } else lEndedWalkNum = lEndNum;
        
        lStartNum = lStartNum + 0.5f;
    }
    
    int MunshiLastWalk() {
        return lEndedWalkNum;
    }
	
