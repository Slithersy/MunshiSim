    //Lerp function (X/Z, min, max)
	float cMath_Lerp(float aFraction, float aMin, float aMax)
	{
		return (aMax + (aMin - aMax) * aFraction);
	}
    
    float cMath_Floor(float afX) {
      return (afX - (afX % 1.0f));
    }
	
