		///Preload Map
        Map_Preload("Lvl0_Apartment");
        
        int lRanNumber = cMath_RandRectl(1, 6);
        Entity_SetActive("Munshi_"+lRanNumber, true);
        
		PauseMenu_Enabled(false);
		cLux_SetGamePaused(false);
		MainMenu_Show(true);
		cLux_GetGuiHandler().SetGameHudInputFocus(true);
		Player_ShowCrossHairIcons(false);
		Inventory_SetEnabled(false);

		CameraAnimation_Begin("CameraAnimMain", "", false);
        //Doesn't work in practice but works for testing
        //Music_PlayExt("music/HuniePop/bar_lounge.mp3", true, 0.35f, 1.0f, 3.0f, 0.0f, eMusicPrio_BigEvent, false);
        LastOnSoma_SetText(MapName);
	}

